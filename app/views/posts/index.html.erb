<ul class="actions pull-right">
    <li><%= link_to " New Post", new_post_path, class: "new" %></li>
</ul>

<h4>Lost</h4>
<ul>
  <% @posts.lost.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>

<h4>Found</h4>
<ul>
  <% @posts.found.each do |post| %>
  <div class="boxed">
    <li><%= link_to post.title, post %></li>
    <h3><%= link_to post.description %></h3>
  <% end %>
  </div>
</ul>

<h4>Free</h4>
<ul>
  <% @posts.free.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>

<h4>Wanted</h4>
<ul>
  <% @posts.wanted.each do |post| %>
    <li><%= link_to post.title, post %></li>
  <% end %>
</ul>
